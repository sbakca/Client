<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/userimageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/pic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/username_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textColor="#9D9D9D"
                android:textSize="10dip" />

            <TextView
                android:id="@+id/comment_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username_txt"
                android:layout_marginTop="5dp"
                android:text="This is a good shop" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/dislike_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginRight="30dp"
        android:text="dislike" />

    <ImageButton
        android:id="@+id/dislike_btn"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_alignTop="@+id/dislike_txt"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/dislike_txt"
        android:background="@drawable/dislike_button" />

    <TextView
        android:id="@+id/like_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dislike_btn"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/dislike_btn"
        android:text="like" />

    <ImageButton
        android:id="@+id/like_btn"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_alignTop="@+id/like_txt"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/like_txt"
        android:background="@drawable/like_button" />

</RelativeLayout>